<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

    <TextView
        android:id="@+id/Recap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:text="Récapitulatif"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/PateRecap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="75dp"
        android:text="Pate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Recap" />

    <TextView
        android:id="@+id/IngreRecap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Ingrédients"
        app:layout_constraintStart_toStartOf="@+id/PateRecap"
        app:layout_constraintTop_toBottomOf="@+id/PateRecap" />

    <TextView
        android:id="@+id/BoisssonRecap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Boisson"
        app:layout_constraintStart_toStartOf="@+id/IngreRecap"
        app:layout_constraintTop_toBottomOf="@+id/IngreRecap" />

    <TextView
        android:id="@+id/ZonePate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/PateRecap"
        app:layout_constraintTop_toTopOf="@+id/PateRecap" />

    <TextView
        android:id="@+id/ZoneIngre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/ZonePate"
        app:layout_constraintStart_toStartOf="@+id/ZonePate"
        app:layout_constraintTop_toTopOf="@+id/IngreRecap" />

    <TextView
        android:id="@+id/ZoneBoisson"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ZoneIngre"
        app:layout_constraintTop_toTopOf="@+id/BoisssonRecap" />
</androidx.constraintlayout.widget.ConstraintLayout>